<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- SCROLL VIEW CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- ⭐ 1:1 Preview Box -->


                <ImageView
                    android:id="@+id/outputImage"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"

                    />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />


            <!-- ⭐ Shadow Controls (Show only when shadow color selected) -->
            <LinearLayout
                android:id="@+id/shadowControlsLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Shadow Colors"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/colorRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Blur (Shadow Size)"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:id="@+id/blurSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="70" />

                <TextView
                    android:text="Shadow Opacity"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <SeekBar
                    android:id="@+id/opacitySeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="80" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!-- ⭐ Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:weightSum="4"
        android:orientation="horizontal">

        <!-- Auto Shadow -->
        <LinearLayout
            android:id="@+id/navAuto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/circle_bg"/>
            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="Auto Shadow" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Background -->
        <LinearLayout
            android:id="@+id/navBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/circle_bg"/>
            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="Background" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Select Image -->
        <LinearLayout
            android:id="@+id/navSelect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/circle_bg"/>
            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="Select Image" android:textSize="12sp"/>
        </LinearLayout>

        <!-- Shadow Color -->
        <LinearLayout
            android:id="@+id/navColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/circle_bg"/>
            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="Shadow Color" android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
